[Unit]
Description=Awesome Database Indexing
After=network.target docker.service

[Service]
Type=oneshot
User={{USER}}
WorkingDirectory={{WORK_DIR}}
ExecStart={{SCRIPT_PATH}}
StandardOutput=journal
StandardError=journal

# Restart on failure
Restart=on-failure
RestartSec=300

